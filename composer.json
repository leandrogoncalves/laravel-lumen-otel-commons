{
  "name": "picpay/laravel-otel-commons",
  "description": "Lib OTEL para laravel com base em AOP",
  "minimum-stability": "stable",
  "license": "MIT",
  "keywords": [
    "laravel",
    "aspect",
    "transaction",
    "cache",
    "logger"
  ],
  "authors": [
    {
      "name": "Edson JÃºnior",
      "email": "edson.junior@picpay.com"
    }
  ],
  "require": {
    "php": "^7.3|^8.0",
    "illuminate/console": "^9.25",
    "illuminate/filesystem": "^9.25",
    "illuminate/support": "^9.25",
    "illuminate/config": "^9.25",
    "illuminate/contracts": "^9.25",
    "illuminate/log": "^9.25",
    "illuminate/database": "^9.25",
    "illuminate/cache": "^9.25",
    "illuminate/events": "^9.25",
    "illuminate/bus": "^9.25",
    "illuminate/queue": "^9.25",
    "ray/aop": "2.x-dev",
    "doctrine/annotations": "^1.11",
    "nikic/php-parser": "^4.0",
    "psr/log": "~1.0"
  },
  "require-dev": {
    "symfony/framework-bundle": "^5.2",
    "symfony/console": "^6.0",
    "phpunit/phpunit": "^9.3.3",
    "mockery/mockery": "*",
    "php-coveralls/php-coveralls": "*",
    "sebastian/phpcpd": "*",
    "phploc/phploc": "*",
    "pdepend/pdepend" : "^2.2.4",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "~2.7",
    "illuminate/encryption": "^9.25",
    "vlucas/phpdotenv": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "Picpay\\LaravelAspect\\": "src/"
    }
  },
  "autoload-dev": {
    "files": [
      "tests/AspectTestCase.php",
      "tests/helper.php",
      "tests/MockApplication.php",
      "tests/ResolveMockInterface.php",
      "tests/ResolveMockClass.php"
    ],
    "psr-4": {
      "__Test\\": "tests/src"
    }
  },
  "scripts": {
    "quality-assurance": [
      "./vendor/bin/phpunit",
      "./vendor/bin/phpcpd src/",
      "./vendor/bin/phploc src/ --log-xml=tests/logs/quality-assurance/phploc.xml"
    ],
    "phpcs": "./vendor/bin/phpcs src/ --report-full --report-source --standard=PSR2 --colors"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Picpay\\LaravelAspect\\AspectServiceProvider",
        "Picpay\\LaravelAspect\\ConsoleServiceProvider"
      ]
    }
  },
  "repositories": {
    "ray/aop": {
      "type": "vcs",
      "url": "https://github.com/edsonlsjj/Ray.Aop.git"
    }
  }
}
